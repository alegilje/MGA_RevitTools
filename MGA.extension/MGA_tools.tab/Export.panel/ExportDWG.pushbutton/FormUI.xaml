<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MGA - DWG Export"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Width="760" Height="520"
    Background="#F2F2F2">

  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="16"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- Headings -->
    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,0,6"
               Text="Sheet sets" FontWeight="SemiBold"/>
    <TextBlock Grid.Row="0" Grid.Column="2" Margin="0,0,0,6"
               Text="Sheets" FontWeight="SemiBold"/>

    <!-- Lists -->
    <ListBox x:Name="SheetSetsList"
             Grid.Row="1" Grid.Column="0"
             SelectionMode="Single"
             BorderBrush="#888" BorderThickness="1" />
    <ListBox x:Name="SheetsList"
             Grid.Row="1" Grid.Column="2"
             SelectionMode="Extended"
             BorderBrush="#888" BorderThickness="1" />

    <!-- Buttons -->
    <StackPanel Grid.Row="2" Grid.ColumnSpan="3"
                Orientation="Horizontal" HorizontalAlignment="Center"
                Margin="0,12,0,0" >
      <Button x:Name="CancelBtn" Width="160" Height="44" Margin="0,0,20,0"
              Content="Cancel" />
      <Button x:Name="ExportBtn" Width="160" Height="44"
              Content="Export" IsEnabled="False"/>
    </StackPanel>
  </Grid>
</Window>
