<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av"
        Title="Saltdalshytta Import Tools" 
        Height="Auto" Width="800"
        Topmost="True">
        
    <StackPanel Margin = "10">
        <!--Overskrift-->
        <TextBlock Text = "MGA Fargegenerator, Seksjoneringstegninger" FontSize = "16" FontWeight = "Bold" Margin = "0,0,0,10"/>

        <Separator Margin="0,10,0,5"/>


        <TextBlock Text = "Dette verktøyet legger farge på Filled Region basert på parameteret Seksjon"
            FontSize="14"
            FontWeight = "Regular"
            Margin = "0,0,0,10"
            TextWrapping = "Wrap"
            Width = "Auto"/>
            
        <Separator Margin="0,10,0,5"/>
            
        <TextBlock Text = "Velg hvilke seksjoner du vil fargelegge:"
            FontSize = "14"
            FontWeight = "Regular"/>
            
        <ScrollViewer Height = "Auto">
            <ItemsControl x:Name = "UI_seksjon_list">
            </ItemsControl>
        </ScrollViewer>

        <Button Content= "Fargelegg valgte seksjoner" Width = "200" Margin = "0,10,0,0" HorizontalAlignment = "Left" x:Name = "UI_ok_button" Click ="UI_ok_button_Click"/>


    </StackPanel>
</Window>