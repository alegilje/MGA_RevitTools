<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sett Z-verdi" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" Background="#FFF9F9F9">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="28"/>
            <ColumnDefinition Width="520"/>
        </Grid.ColumnDefinitions>

        <!-- Tittel -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Høydeinnstilling linje" FontSize="16" FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <!-- VENSTRE SIDE (instruks + inputs) -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="0,0,0,12">
            <!-- P1 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="P1 =" FontWeight="Bold" Width="34" Margin="0,0,6,0"/>
                <TextBlock Text="&quot;Nåværende verdi&quot; (endres til ønsket Z-verdi)" />
            </StackPanel>
            <DockPanel Margin="34,6,0,0">
                <TextBlock Text="Z (mm):" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Name="P1Box" Width="120" Height="24" />
            </DockPanel>

            <!-- Check: P2 same as P1 -->
            <CheckBox Name="SameAsP1" Margin="0,12,0,6">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="18" Height="18" Stroke="#333" StrokeThickness="1" Margin="0,0,6,0"/>
                    <TextBlock Text="P2 skal ha samme Z-verdi som P1"/>
                </StackPanel>
            </CheckBox>

            <!-- P2 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="P2 =" FontWeight="Bold" Width="34" Margin="0,0,6,0"/>
                <TextBlock Text="Hvis ikke samme verdi ➜ &quot;Nåværende verdi&quot; (kan endres til ønsket verdi)"/>
            </StackPanel>
            <DockPanel Margin="34,6,0,0">
                <TextBlock Text="Z (mm):" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Name="P2Box" Width="120" Height="24" />
            </DockPanel>
        </StackPanel>

        <!-- HØYRE SIDE (skisse/preview) -->
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="2" Background="White"
                BorderBrush="#222" BorderThickness="2" Padding="14" CornerRadius="2">
            <Grid>
                <Border BorderBrush="#444" BorderThickness="3" Margin="10"/>
                <Canvas Name="Sketch" Margin="30">
                    <!-- Horisontal linje -->
                    <Line X1="80" Y1="140" X2="430" Y2="140" Stroke="#222" StrokeThickness="6"/>
                    <!-- P1 mark -->
                    <Line X1="80" Y1="140" X2="70" Y2="120" Stroke="#222" StrokeThickness="2"/>
                    <Line X1="80" Y1="140" X2="90" Y2="120" Stroke="#222" StrokeThickness="2"/>
                    <TextBlock Text="P1" Canvas.Left="60" Canvas.Top="100" FontWeight="Bold"/>
                    <!-- P2 mark -->
                    <Line X1="430" Y1="140" X2="420" Y2="120" Stroke="#222" StrokeThickness="2"/>
                    <Line X1="430" Y1="140" X2="440" Y2="120" Stroke="#222" StrokeThickness="2"/>
                    <TextBlock Text="P2" Canvas.Left="440" Canvas.Top="100" FontWeight="Bold"/>
                </Canvas>
            </Grid>
        </Border>

        <!-- KNAPPER -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Content="OK" Width="90" Margin="0,0,10,0" IsDefault="True"/>
            <Button Name="CancelButton" Content="Avbryt" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
