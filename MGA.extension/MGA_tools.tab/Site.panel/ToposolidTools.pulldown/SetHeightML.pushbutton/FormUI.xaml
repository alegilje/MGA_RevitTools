<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sett Z-verdi"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="20">
        <TextBlock Text="Ny Z-verdi (mm):" Margin="0,0,0,10"/>
        <TextBox Name="ZBox" Width="200" Height="25" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Content="OK" Width="80" Margin="0,0,10,0"/>
            <Button Name="CancelButton" Content="Avbryt" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>
